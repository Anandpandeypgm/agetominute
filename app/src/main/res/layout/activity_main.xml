<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE YOUR"
        android:textColor="#0F6FC8"
        android:textSize="25sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE"
    android:padding="10dp"
    android:background="#CDB4DB"
        android:textColor="#FFC8DD"
        android:textSize="25sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IN MINUTES"
        android:padding="10dp"
        android:textColor="#3078BB"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textColor="#D95A88"
        android:backgroundTint="#BDDEFE"
        android:layout_marginTop="28dp"
        android:textStyle="bold"
        android:text="Select Date"
        />
    <TextView
        android:id="@+id/tvselectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17.07.2002"
        android:padding="10dp"
        android:textColor="#FFAFCC"
        android:textSize="29sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Date"
        android:padding="10dp"
        android:textColor="#445989"
        android:textSize="17sp"
        android:layout_marginTop="0dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvAgeInMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27814632"
        android:padding="10dp"
        android:textColor="#FFC8DD"
        android:textSize="29sp"
        android:layout_marginTop="19dp"
        android:textStyle="bold"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="This is your age in minutes"
    android:padding="10dp"
    android:textColor="#445989"
    android:textSize="17sp"
    android:layout_marginTop="0dp"
    android:textStyle="bold"/>

</LinearLayout>